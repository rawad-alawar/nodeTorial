extends layout

block content
  .container
    .blog-header
      h1.blog-title Node.js Tutorials from Around the Web

      p.lead.blog-description A blog dedicated to discovering and reviewing Node.js tutorials

    .row
      .col-sm-8.blog-main
        .blog-post
        if entries
          each entry, i in entries
          
            h2.blog-post-title #{entry.title}

            p.blog-post-meta #{entry.date} by #{entry.author}&nbsp&nbsp&nbsp&nbsp  Difficulty: #{entry.difficulty}        



            !=truncateText(entry.body, 200)

            br
            br
            a.mas(href='/blogpage/#{entry._id}') Read More 

          nav
            ul.pager
              li
                a(href='#') Previous

              li
                a(href='#') Next
      // /.blog-main
